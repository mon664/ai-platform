{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "web/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/auto-blog",
      "schedule": "0 0 * * *"
    }
  ]
}
